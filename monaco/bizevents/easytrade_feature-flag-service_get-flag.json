{
  "enabled": true,
  "ruleName": "{{ .name }}",
  "triggers": [
    {
      "source": {
        "dataSource": "request.method"
      },
      "type": "EQUALS",
      "value": "GET",
      "caseSensitive": false
    },
    {
      "source": {
        "dataSource": "request.path"
      },
      "type": "N_ENDS_WITH",
      "value": "flags",
      "caseSensitive": false
    },
    {
      "source": {
        "dataSource": "request.path"
      },
      "type": "STARTS_WITH",
      "value": "/v1/flags",
      "caseSensitive": false
    }
  ],
  "event": {
    "provider": {
      "sourceType": "constant.string",
      "source": "www.easytrade.com"
    },
    "type": {
      "sourceType": "constant.string",
      "source": "com.easytrade.flag"
    },
    "category": {
      "sourceType": "request.path"
    },
    "data": [
      {
        "name": "tag",
        "source": {
          "sourceType": "response.body",
          "path": "tag"
        }
      },
      {
        "name": "isModifiable",
        "source": {
          "sourceType": "response.body",
          "path": "isModifiable"
        }
      },
      {
        "name": "description",
        "source": {
          "sourceType": "response.body",
          "path": "description"
        }
      },
      {
        "name": "name",
        "source": {
          "sourceType": "response.body",
          "path": "name"
        }
      },
      {
        "name": "enabled",
        "source": {
          "sourceType": "response.body",
          "path": "enabled"
        }
      },
      {
        "name": "flagId",
        "source": {
          "sourceType": "response.body",
          "path": "id"
        }
      }
    ]
  }
}
