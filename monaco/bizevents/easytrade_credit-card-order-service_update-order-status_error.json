{
  "enabled": true,
  "ruleName": "{{ .name }}",
  "triggers": [
    {
      "source": {
        "dataSource": "request.body",
        "path": "type"
      },
      "type": "EQUALS",
      "value": "CARD_ERROR",
      "caseSensitive": false
    },
    {
      "source": {
        "dataSource": "request.method"
      },
      "type": "EQUALS",
      "value": "POST",
      "caseSensitive": false
    },
    {
      "source": {
        "dataSource": "request.path"
      },
      "type": "ENDS_WITH",
      "value": "/status",
      "caseSensitive": false
    },
    {
      "source": {
        "dataSource": "request.path"
      },
      "type": "STARTS_WITH",
      "value": "/v1/orders",
      "caseSensitive": false
    }
  ],
  "event": {
    "provider": {
      "sourceType": "constant.string",
      "source": "www.easytrade.com"
    },
    "type": {
      "sourceType": "constant.string",
      "source": "com.easytrade.update-credit-card-status.error"
    },
    "category": {
      "sourceType": "request.path"
    },
    "data": [
      {
        "name": "details",
        "source": {
          "sourceType": "request.body",
          "path": "details"
        }
      },
      {
        "name": "timestamp",
        "source": {
          "sourceType": "request.body",
          "path": "timestamp"
        }
      },
      {
        "name": "type",
        "source": {
          "sourceType": "request.body",
          "path": "type"
        }
      },
      {
        "name": "orderId",
        "source": {
          "sourceType": "request.body",
          "path": "orderId"
        }
      }
    ]
  }
}
