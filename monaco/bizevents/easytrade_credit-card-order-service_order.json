{
  "enabled": true,
  "ruleName": "{{ .name }}",
  "triggers": [
    {
      "source": {
        "dataSource": "request.method"
      },
      "type": "EQUALS",
      "value": "POST",
      "caseSensitive": false
    },
    {
      "source": {
        "dataSource": "request.path"
      },
      "type": "EQUALS",
      "value": "/v1/orders",
      "caseSensitive": false
    }
  ],
  "event": {
    "provider": {
      "sourceType": "constant.string",
      "source": "www.easytrade.com"
    },
    "type": {
      "sourceType": "constant.string",
      "source": "com.easytrade.order-credit-card"
    },
    "category": {
      "sourceType": "request.path"
    },
    "data": [
      {
        "name": "orderId",
        "source": {
          "sourceType": "response.body",
          "path": "results.creditCardOrderId"
        }
      },
      {
        "name": "cardLevel",
        "source": {
          "sourceType": "request.body",
          "path": "cardLevel"
        }
      },
      {
        "name": "shippingAddress",
        "source": {
          "sourceType": "request.body",
          "path": "shippingAddress"
        }
      },
      {
        "name": "name",
        "source": {
          "sourceType": "request.body",
          "path": "name"
        }
      },
      {
        "name": "email",
        "source": {
          "sourceType": "request.body",
          "path": "email"
        }
      },
      {
        "name": "accountId",
        "source": {
          "sourceType": "request.body",
          "path": "accountId"
        }
      }
    ]
  }
}
