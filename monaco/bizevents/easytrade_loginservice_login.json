{
  "enabled": true,
  "ruleName": "EasyTrade [loginservice | .NET] - POST /api/Login",
  "triggers": [
    {
      "source": {
        "dataSource": "request.path"
      },
      "type": "EQUALS",
      "value": "/api/Login",
      "caseSensitive": false
    },
    {
      "source": {
        "dataSource": "request.method"
      },
      "type": "EQUALS",
      "value": "POST",
      "caseSensitive": false
    }
  ],
  "event": {
    "provider": {
      "sourceType": "constant.string",
      "source": "www.easytrade.com"
    },
    "type": {
      "sourceType": "constant.string",
      "source": "com.easytrade.login"
    },
    "category": {
      "sourceType": "request.path"
    },
    "data": [
      {
        "name": "xml",
        "source": {
          "sourceType": "constant.string",
          "source": "true"
        }
      },
      {
        "name": "username",
        "source": {
          "sourceType": "request.body",
          "path": "LoginRequest.username"
        }
      },
      {
        "name": "password",
        "source": {
          "sourceType": "request.body",
          "path": "LoginRequest.password"
        }
      },
      {
        "name": "accountId",
        "source": {
          "sourceType": "response.body",
          "path": "IdResponse.id"
        }
      }
    ]
  }
}
