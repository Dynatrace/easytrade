{
  "enabled": true,
  "ruleName": "{{ .name }}",
  "triggers": [
    {
      "source": {
        "dataSource": "request.method"
      },
      "type": "EQUALS",
      "value": "POST",
      "caseSensitive": false
    },
    {
      "source": {
        "dataSource": "request.path"
      },
      "type": "ENDS_WITH",
      "value": "/deposit",
      "caseSensitive": false
    },
    {
      "source": {
        "dataSource": "request.path"
      },
      "type": "STARTS_WITH",
      "value": "/broker-service/v1/balance",
      "caseSensitive": false
    }
  ],
  "event": {
    "provider": {
      "sourceType": "constant.string",
      "source": "www.easytrade.com"
    },
    "type": {
      "sourceType": "constant.string",
      "source": "com.easytrade.nginx.deposit"
    },
    "category": {
      "sourceType": "request.path"
    },
    "data": [
      {
        "name": "cvv",
        "source": {
          "sourceType": "request.body",
          "path": "cvv"
        }
      },
      {
        "name": "cardType",
        "source": {
          "sourceType": "request.body",
          "path": "cardType"
        }
      },
      {
        "name": "cardNumber",
        "source": {
          "sourceType": "request.body",
          "path": "cardNumber"
        }
      },
      {
        "name": "email",
        "source": {
          "sourceType": "request.body",
          "path": "email"
        }
      },
      {
        "name": "address",
        "source": {
          "sourceType": "request.body",
          "path": "address"
        }
      },
      {
        "name": "name",
        "source": {
          "sourceType": "request.body",
          "path": "name"
        }
      },
      {
        "name": "amount",
        "source": {
          "sourceType": "request.body",
          "path": "amount"
        }
      },
      {
        "name": "balance",
        "source": {
          "sourceType": "response.body",
          "path": "value"
        }
      },
      {
        "name": "accountId",
        "source": {
          "sourceType": "response.body",
          "path": "accountId"
        }
      }
    ]
  }
}
