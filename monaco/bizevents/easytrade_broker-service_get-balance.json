{
  "enabled": true,
  "ruleName": "{{ .name }}",
  "triggers": [
    {
      "source": {
        "dataSource": "request.method"
      },
      "type": "EQUALS",
      "value": "GET",
      "caseSensitive": false
    },
    {
      "source": {
        "dataSource": "request.path"
      },
      "type": "STARTS_WITH",
      "value": "/v1/balance",
      "caseSensitive": false
    }
  ],
  "event": {
    "provider": {
      "sourceType": "constant.string",
      "source": "www.easytrade.com"
    },
    "type": {
      "sourceType": "constant.string",
      "source": "com.easytrade.balance"
    },
    "category": {
      "sourceType": "request.path"
    },
    "data": [
      {
        "name": "balance",
        "source": {
          "sourceType": "response.body",
          "path": "value"
        }
      },
      {
        "name": "accountId",
        "source": {
          "sourceType": "response.body",
          "path": "accountId"
        }
      }
    ]
  }
}
