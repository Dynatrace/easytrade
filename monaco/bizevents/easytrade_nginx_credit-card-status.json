{
  "enabled": true,
  "ruleName": "{{ .name }}",
  "triggers": [
    {
      "source": {
        "dataSource": "request.path"
      },
      "type": "ENDS_WITH",
      "value": "status",
      "caseSensitive": false
    },
    {
      "source": {
        "dataSource": "request.path"
      },
      "type": "STARTS_WITH",
      "value": "/credit-card-order-service/v1/orders",
      "caseSensitive": false
    },
    {
      "source": {
        "dataSource": "request.method"
      },
      "type": "EQUALS",
      "value": "GET",
      "caseSensitive": false
    }
  ],
  "event": {
    "provider": {
      "sourceType": "constant.string",
      "source": "www.easytrade.com"
    },
    "type": {
      "sourceType": "constant.string",
      "source": "com.easytrade.nginx.credit-card-status"
    },
    "category": {
      "sourceType": "request.path"
    },
    "data": [
      {
        "name": "statusCode",
        "source": {
          "sourceType": "response.body",
          "path": "statusCode"
        }
      },
      {
        "name": "message",
        "source": {
          "sourceType": "response.body",
          "path": "message"
        }
      },
      {
        "name": "resultsId",
        "source": {
          "sourceType": "response.body",
          "path": "results.id"
        }
      },
      {
        "name": "creditCardOrderId",
        "source": {
          "sourceType": "response.body",
          "path": "results.creditCardOrderId"
        }
      },
      {
        "name": "time",
        "source": {
          "sourceType": "response.body",
          "path": "results.timestamp"
        }
      },
      {
        "name": "status",
        "source": {
          "sourceType": "response.body",
          "path": "results.status"
        }
      },
      {
        "name": "details",
        "source": {
          "sourceType": "response.body",
          "path": "results.details"
        }
      }
    ]
  }
}
